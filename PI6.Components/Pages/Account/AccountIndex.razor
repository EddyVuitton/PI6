@page "/account/"

@if (_account is not null)
{
    <MudPaper Elevation="0" Style="margin: 1%;">
        <br />
        <MudText Align="Align.Left" Typo="Typo.h3">Moje grupy</MudText>
        <MudPaper Elevation="0" Width="50%">
            @if (_studentGroups is not null)
            {
                if (_studentGroups.Count != 0)
                {
                    <Groups StudentGroups="_studentGroups" />
                }
                else
                {
                    <MudText>
                        Brak przypisanych grup...
                    </MudText>
                }
            }
            else
            {
                <MudText>
                    Ładowanie grup...
                </MudText>
            }
        </MudPaper>
        <br />
        <MudText Align="Align.Left" Typo="Typo.h3">Studenci</MudText>
        <MudPaper Elevation="0" Width="50%">
            @if (_studentGroupMapDtos is not null)
            {
                if (_studentGroupMapDtos.Count != 0)
                {
                    <Students StudentGroupMap="_studentGroupMapDtos" />
                }
                else
                {
                    <MudText>
                        Nie znaleziono studentów...
                    </MudText>
                }
            }
            else
            {
                <MudText>
                    Ładowanie studentów...
                </MudText>
            }
        </MudPaper>
        <br />
        <MudText Align="Align.Left" Typo="Typo.h3">Wyniki testów</MudText>
        <MudPaper Elevation="0" Width="50%">
            @if (_formResultsDto is not null)
            {
                if (_formResultsDto.Count != 0)
                {
                    <Results FormResultsDto="_formResultsDto" />
                }
                else
                {
                    <MudText>
                        Nie znaleziono wyników...
                    </MudText>
                }
            }
            else
            {
                <MudText>
                    Ładowanie wyników...
                </MudText>
            }
        </MudPaper>
    </MudPaper>
}