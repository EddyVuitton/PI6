@page "/"

<MudPaper Elevation="0" Class="d-flex flex-column align-center justify-center">
    <MudPaper Elevation="0" Style="margin: 1%;" Width="90%">
        <AdvCarousel />
    </MudPaper>
    <MudPaper Elevation="1" Style="margin: 1%; padding: 1%;" Width="400px" Class="d-flex flex-row align-center justify-space-around">
        <MudPaper Elevation="0">
            <MudButton Size="Size.Small"
                       Variant="Variant.Filled"
                       Color="Color.Info"
                       Href="/newform"
                       Disabled="true"
                       Style="text-transform:none; font-size: 20px">
                Nowy formularz
            </MudButton>
        </MudPaper>
        <MudPaper Elevation="0">
            <MudButton Size="Size.Small"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       Href="/newquiz"
                       Style="text-transform:none; font-size: 20px">
                Nowy quiz
            </MudButton>
        </MudPaper>
    </MudPaper>
    <MudPaper Elevation="0" Class="d-flex justify-center flex-grow-1 flex-wrap gap-y-4 gap-x-4" Width="70%">
        @if (_formTiles == null)
        {
            <MudText>
                Ładowanie formularzy...
            </MudText>
        }
        else
        {
            <FormTilesIndex FormTiles="_formTiles" />
        }
    </MudPaper>
</MudPaper>