@page "/newquiz"

<MudPaper Elevation="2" Class="d-flex justify-center">
    <MudPaper Elevation="0" Style="margin: 1%; border: 1px solid; width: 50%;">
        <MudGrid Justify="Justify.FlexStart">
            <MudItem xs="12">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8" Style=" border: 1px solid red;">
                    <MudTextField Style="border: 1px solid; width: 600px; height: 50px; font-size: 45px;" T="string" />
                </MudPaper>
            </MudItem>
            @for (int i = 0; i < _questionCount; i++)
            {
                int localindex = i;

                <MudItem xs="12">
                    <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8" Style="border: 1px solid blue;">
                        <MudTextField @bind-Value="TextValue2" Label="Outlined" Variant="Variant.Outlined"></MudTextField>
                    </MudPaper>
                </MudItem>
            }
            <MudItem xs="12">
                <MudButton OnClick="AddNew" Style="text-transform:none; margin: 1%; padding:2%; background-color: hotpink;">Add new</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudPaper>