<MudPaper Elevation="2" Style="margin: 1%; margin-right: auto; margin-left: auto;" Width="400px">
    <MudGrid Justify="Justify.Center">
        <MudItem>
            <MudPaper Elevation="0" Class="d-flex flex-column align-center justify-center px-2">
                <MudButton Size="Size.Small"
                           Variant="Variant.Filled"
                           Color="Color.Info"
                           Href="/newform"
                           Disabled="true"
                           Style="text-transform:none;font-size: 20px">
                    Nowy formularz
                </MudButton>
            </MudPaper>
        </MudItem>
        <MudItem>
            <MudPaper Elevation="0" Class="d-flex flex-column align-center justify-center px-2">
                <MudButton Size="Size.Small"
                           Variant="Variant.Filled"
                           Color="Color.Secondary"
                           Href="/newquiz"
                           Style="text-transform:none;font-size: 20px">
                    New Quiz
                </MudButton>
            </MudPaper>
