@foreach (var f in FormTiles)
{
    var tempHref = $"/{_href}/{f.ForId}";
    var tempEndDate = f.DataZamkniecia.HasValue == true ? f.DataZamkniecia.Value.Date.ToShortDateString() : "Nie określono";

    <MudPaper Elevation="10" Width="300px" Style="">
        <MudLink Href="@tempHref">
            <MudPaper Elevation="0" Class="d-flex flex-column justify-start" Style="">
                <MudPaper Elevation="0" Class="d-flex justify-start flex-column flex-grow-1" Style="margin: 1% 1% 2% 1%; background-color: inherit;">
                    <MudText Style="color: black;">Nazwa: @f.Nazwa</MudText>
                    @*<MudText Style="color: black;">Typ: @f.FortNazwa</MudText>*@
                    <MudText Style="color: black;">Data stworzenia: @f.DataStworzenia.Date.ToShortDateString()</MudText>
                    <MudText Style="color: black;">Data otwarcia: @f.DataOtwarcia.Date.ToShortDateString()</MudText>
                    <MudText Style="color: black;">Data zamkniecia: @tempEndDate</MudText>
                </MudPaper>
            </MudPaper>
        </MudLink>
        <MudPaper Elevation="0" Class="d-flex flex-row justify-space-between" Style="background-color: inherit;">
            <MudButton OnClick="OpenLoginDialog" Variant="Variant.Filled" Style="background-color: #28b2f7; width: 140px; margin: 1%">Przypisz</MudButton>
            <MudButton OnClick="OpenLoginDialog" Variant="Variant.Filled" Style="background-color: #f2891f; width: 140px; margin: 1%">Otwórz/Zamknij</MudButton>
        </MudPaper>
    </MudPaper>
}