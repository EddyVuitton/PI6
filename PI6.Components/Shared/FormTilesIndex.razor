@foreach (var f in FormTiles)
{
    var tempHref = $"/{_href}/{f.ForId}";
    var tempEndDate = f.DataZamkniecia.HasValue == true ? f.DataZamkniecia.Value.Date.ToShortDateString() : "Nie określono";

    <MudLink Href="@tempHref">
        <MudPaper Elevation="6" Width="250px" Height="130px" Style="background-color: #5ad94c;">
            <MudPaper Elevation="0" Class="d-flex flex-column justify-start" Style="background-color: inherit;">
                <MudPaper Elevation="0" Class="d-flex justify-center align-content-center flex-wrap flex-grow-1" Style="margin: 1%; background-color: inherit;">
                    <MudPaper Elevation="0" Class="d-flex flex-column justify-center align-content-center" Style="margin: 1%; background-color: inherit;">
                        <MudText Style="color: black;">Nazwa: @f.Nazwa</MudText>
                        <MudText Style="color: black;">Typ: @f.FortNazwa</MudText>
                        <MudText Style="color: black;">Data stworzenia: @f.DataStworzenia.Date.ToShortDateString()</MudText>
                        <MudText Style="color: black;">Data otwarcia: @f.DataOtwarcia.Date.ToShortDateString()</MudText>
                        <MudText Style="color: black;">Data zamkniecia: @tempEndDate</MudText>
                    </MudPaper>
                </MudPaper>
            </MudPaper>
        </MudPaper>
    </MudLink>
}