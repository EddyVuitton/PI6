<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_account.us_email"
                      T="string"
                      Label="Email" />
        <MudTextField @bind-Value="_account.us_pass"
                      T="string"
                      Label="Hasło"
                      InputType="InputType.Password" />
        @if (_isLoginFailed)
        {
            <MudText Color="Color.Error">Błędne hasło lub email</MudText>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Login">Login</MudButton>
    </DialogActions>
</MudDialog>