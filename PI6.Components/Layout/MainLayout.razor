@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<CascadingAuthenticationState>
    <MudLayout>
        <MudAppBar Elevation="0" Dense="@true" Fixed="@true">
            <MudPaper Elevation="0" Class="d-flex flex-row" Style="width: 100%; background-color: inherit;">
                <MudPaper Elevation="0" Class="d-flex justify-start flex-shrink-1" Style="background-color: inherit;" Width="50%;">
                    <MudIconButton OnClick="NavToIndex" Icon="@Icons.Material.Filled.Home" Style="color: #FFFFFF;" />
                </MudPaper>
                <MudPaper Elevation="0" Class="d-flex justify-end" Style="background-color: inherit;" Width="50%;">
                    <LoginLinks />
                </MudPaper>
            </MudPaper>
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1" Variant="DrawerVariant.Responsive">
            <MudNavMenu Margin="Margin.Normal">
                <AuthorizeView Roles=@_roles>
                    <Authorized>
                        <MudNavLink Style="font-size: large;" Href="@($"/account/")" Icon="@Icons.Material.Filled.Person" IconColor="Color.Success">Moje konto</MudNavLink>
                    </Authorized>
                </AuthorizeView>
            </MudNavMenu>
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudLayout>
</CascadingAuthenticationState>