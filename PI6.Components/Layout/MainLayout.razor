@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Dense="@true" Fixed="@true">
        <MudPaper Elevation="0" Class="d-flex flex-row" Style="width: 100%; background-color: inherit;">
            <MudPaper Elevation="0" Class="d-flex justify-start flex-shrink-1" Style="background-color: inherit;" Width="50%;">
                <MudIconButton OnClick="NavToIndex" Icon="@Icons.Material.Filled.Home" Style="color: #FFFFFF;" />
            </MudPaper>
            <MudPaper Elevation="0" Class="d-flex justify-end" Style="background-color: inherit;" Width="50%;">
                <MudIconButton OnClick="OpenDialog" Icon="@Icons.Material.Filled.Login" Style="color: #FFFFFF;" />
                <MudIconButton Icon="@Icons.Material.Filled.Logout" Style="color: #FFFFFF;" />
            </MudPaper>
        </MudPaper>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>